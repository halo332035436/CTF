<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_ranking_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.bullb.ctf.SalesRanking.RankingDetail.RankingDetailActivity"
    tools:showIn="@layout/activity_ranking_detail">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/big_pink_bg"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/personal_info_banner_layout"/>


        <com.bullb.ctf.Widget.CalendarView
            android:id="@+id/calendar_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>



        <FrameLayout
            android:id="@+id/ranking_detail_frame"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>


        <com.bullb.ctf.Widget.BottomView
            android:id="@+id/bottom_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottom_view_height"/>

    </LinearLayout>



</RelativeLayout>
