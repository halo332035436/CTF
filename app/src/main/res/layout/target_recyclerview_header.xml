<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/circle_frame">

    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/rank_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="@style/CircleDescriptionTextStyle"
                android:gravity="center"
                android:textSize="14sp"
                android:maxLines="1"
                android:ellipsize="start"/>

            <TextView
                android:id="@+id/rank"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="6dp"
                android:gravity="center"
                android:textAppearance="@style/CircleDataTextStyle"
                android:textSize="24sp"/>
        </LinearLayout>


        <android.support.v4.view.ViewPager
            android:id="@+id/header_pager"
            android:layout_width="match_parent"
            android:layout_height="@dimen/rank_viewpager_height"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"/>

        <me.relex.circleindicator.CircleIndicator
            android:id="@+id/indicator"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_alignParentBottom="true"
            app:ci_drawable="@drawable/circle_red"
            app:ci_drawable_unselected="@drawable/circle_hollow_red"
            app:ci_animator="@null"/>

    </LinearLayout>

</RelativeLayout>
