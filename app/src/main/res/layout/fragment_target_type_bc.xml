<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.bullb.ctf.TargetManagement.TargetTypeBCFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/rank_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="@style/CircleDescriptionTextStyle"
                android:gravity="center"
                android:textSize="14sp"
                android:maxLines="1"
                android:ellipsize="start"/>

            <TextView
                android:id="@+id/rank"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="6dp"
                android:gravity="center"
                android:textAppearance="@style/CircleDataTextStyle"
                android:textSize="24sp"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <com.bullb.ctf.Widget.CircleView
                android:id="@+id/circle_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/type_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:textSize="12sp"
                android:layout_toLeftOf="@+id/circle_view"
                android:layout_centerVertical="true"
                android:textAppearance="@style/CircleDescriptionTextStyle"
                />


            <TextView
                android:id="@+id/textview11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:text="@string/breakdown_target_complete_rate"
                android:layout_toRightOf="@+id/circle_view"
                android:textAppearance="@style/CircleDescriptionTextStyle"
                android:gravity="center_horizontal"
                android:maxLines="2" />

            <TextView
                android:id="@+id/target_complete_rate_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@+id/circle_view"
                android:layout_below="@+id/textview11"
                android:textAppearance="@style/CircleDataTextStyle"
                android:gravity="center_horizontal"
                android:maxLines="1"
                />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
