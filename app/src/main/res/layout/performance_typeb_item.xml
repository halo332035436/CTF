<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="4dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_transparent_80"
        android:id="@+id/relativeLayout"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <com.joooonho.SelectableRoundedImageView
            android:id="@+id/photo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:scaleType="centerCrop"
            android:layout_gravity="top"
            app:sriv_oval="true"/>
        

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_weight="1">

        <TextView
            android:id="@+id/user_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test"
            android:textColor="@color/text_dark_grey"
            android:textSize="18sp"/>


        <TextView
            android:id="@+id/user_position_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="100dp"
            android:layout_marginLeft="8dp"
            android:textColor="@color/text_mid_grey"
            android:layout_toRightOf="@+id/user_name_text"
            android:layout_alignBaseline="@+id/user_name_text"
            android:layout_toLeftOf="@+id/target_text"
            android:text="test"
            android:textSize="12sp"
            android:maxLines="1"/>

            <TextView
                android:id="@+id/sales_text"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:maxWidth="100dp"
                android:text="1231231"
                android:textColor="@color/text_dark_grey"
                android:gravity="right"
                android:textSize="18sp"
                android:maxLines="1"
                android:layout_alignParentEnd="true"/>




            <RelativeLayout
                android:id="@+id/progress_bar_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/progress_bar_height"
                android:minHeight="@dimen/progress_bar_height"
                android:maxHeight="@dimen/progress_bar_height"
                android:layout_below="@+id/user_name_text"
                android:layout_marginTop="8dp">


            <ProgressBar
                android:id="@+id/progress_bar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/progress_bar_height"
                android:minHeight="@dimen/progress_bar_height"
                android:maxHeight="@dimen/progress_bar_height"/>


                <TextView
                    android:id="@+id/target_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="test"
                    android:layout_marginRight="4dp"
                    android:textColor="@color/white"
                    android:layout_alignParentRight="true"
                    android:textSize="9sp"/>


            </RelativeLayout>


            <LinearLayout
                android:id="@+id/growth_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_below="@+id/progress_bar_layout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_mid_grey"
                    android:textSize="10sp"
                    android:text="@string/compare_growth"/>

                <ImageView
                    android:id="@+id/growth_img"
                    android:layout_width="0dp"
                    android:layout_height="11dp"
                    android:layout_weight="1"
                    android:layout_marginRight="4dp"
                    android:scaleType="fitEnd"/>

                <TextView
                    android:id="@+id/growth_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textColor="@color/text_dark_grey"/>
            </LinearLayout>


            <View
                android:id="@+id/underline1"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/growth_layout"
                android:layout_marginTop="2dp"
                android:background="@color/text_mid_grey"/>

            <LinearLayout
                android:id="@+id/profit_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_below="@+id/underline1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_mid_grey"
                    android:textSize="10sp"
                    android:text="@string/profit_amount"/>


                <TextView
                    android:id="@+id/profit_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textSize="10sp"
                    android:textColor="@color/text_dark_grey"
                    android:layout_marginLeft="4dp"/>
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/profit_layout"
                android:background="@color/text_mid_grey"/>


        </RelativeLayout>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/right"
            android:layout_gravity="center_vertical"/>



    </LinearLayout>


</RelativeLayout>
