<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="4dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="@color/white_transparent_80"
        android:id="@+id/relativeLayout"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <com.joooonho.SelectableRoundedImageView
            android:id="@+id/photo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:scaleType="centerCrop"
            app:sriv_oval="true"/>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_weight="1">

            <RelativeLayout
                android:id="@+id/layout_01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">


                <ImageView
                    android:id="@+id/location_img"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:maxWidth="100dp"
                    android:text="test"
                    android:textColor="@color/text_dark_grey"
                    android:textSize="18sp"
                    android:maxLines="1"
                    android:layout_marginTop="3dp"
                    android:layout_alignTop="@+id/location_text"
                    android:layout_gravity="top"
                    android:src="@drawable/pin"/>


                <TextView
                    android:id="@+id/location_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@+id/location_img"
                    android:layout_toLeftOf="@+id/target_text"
                    android:textColor="@color/text_mid_grey"
                    android:textSize="12sp"
                    android:maxLines="2"/>


                <TextView
                    android:id="@+id/target_text"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:maxWidth="100dp"
                    android:text="1231231"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/text_dark_grey"
                    android:gravity="right"
                    android:textSize="18sp"
                    android:maxLines="1"/>

            </RelativeLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/progress_bar_height"
                android:minHeight="@dimen/progress_bar_height"
                android:maxHeight="@dimen/progress_bar_height"
                android:layout_below="@+id/layout_01"
                android:layout_marginTop="8dp">


                <ProgressBar
                    android:id="@+id/progress_bar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/progress_bar_height"
                    android:minHeight="@dimen/progress_bar_height"
                    android:maxHeight="@dimen/progress_bar_height"/>


                <TextView
                    android:id="@+id/target_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="test"
                    android:layout_marginRight="4dp"
                    android:textColor="@color/white"
                    android:layout_alignParentRight="true"
                    android:textSize="9sp"/>


            </RelativeLayout>


        </RelativeLayout>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/right"/>



    </LinearLayout>


</RelativeLayout>
