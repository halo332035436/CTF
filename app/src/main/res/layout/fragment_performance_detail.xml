<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bullb.ctf.PerformanceEnquiry.TypeA.PerformanceDetailFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="12dp"
        android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/performance_detail_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:background="@color/white_transparent_80"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_grey"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"/>


    <LinearLayout
        android:id="@+id/list_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:padding="8dp"
        android:orientation="horizontal"
        android:weightSum="100"
        android:background="@color/white_transparent_80">


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:textColor="@color/text_mid_grey"
            android:text="@string/small_count"
            android:textSize="12sp"/>


        <TextView
            android:id="@+id/point_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="55"
            android:gravity="center_horizontal"
            android:textColor="@color/text_mid_grey"
            android:textSize="12sp"/>


        <TextView
            android:id="@+id/title_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="35"
            android:textColor="@color/text_mid_grey"
            android:visibility="gone"
            android:textSize="12sp"/>


        <TextView
            android:id="@+id/status_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="15"
            android:textColor="@color/text_mid_grey"
            android:textSize="12sp"
            android:gravity="right"/>

    </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/no_data_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/no_data"
        android:textColor="@color/text_mid_grey"
        android:visibility="invisible"/>

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_gravity="center"
        />

</FrameLayout>
